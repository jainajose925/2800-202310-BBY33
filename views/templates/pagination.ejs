        <input class="col-sm jpag" type="submit" value="<%= i %>" moveTo="<%= i %>">
<!--    </form>-->
<% } %>
<% if (currPage < numPages) { %>
<!--    <form class="col" method="get" action="/gjournal/<%= parseInt(currPage) + 1 %>">-->
        <input class="col-sm jpag" type="submit" value="Next" moveTo="<%= parseInt(currPage) + 1 %>">
<!--    </form>-->
