<%
    const numPageBtn = 2;
    let start = Math.max(1, currPage-Math.floor(numPageBtn/2));
    let end = Math.min(numPages, currPage+Math.floor(numPageBtn/2));
%>

<% for (let i = start; i <= end; i++) { %>
