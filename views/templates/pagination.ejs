<% } %>

<script>
    const paginationButtons = document.querySelectorAll(".jpag");
    let route = "";
    // console.log();
    if (window.location.href.split("/").includes("gjournal"))
        route = "/gjournal/";
    else
        route = "/chatbot/"
        paginationButtons.forEach(function (e) {
            console.log(e.getAttribute("moveTo"));
            e.addEventListener("click", function() {
                window.location.href='/gjournal/' + e.getAttribute("moveTo");
            });
        });
</script>